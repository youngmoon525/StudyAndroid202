<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".friend.FriendDetailActivity">

    <FrameLayout
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imgv_background"
            android:alpha="0.6"
            android:scaleType="centerCrop"
            android:src="@drawable/friend_img2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

    <ImageView
        android:id="@+id/imgv_close"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_close_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout

        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ln_friend"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:id="@+id/imgv_profile"
                android:scaleType="centerCrop"
                android:src="@drawable/friend_img1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tv_name"
            style="@style/kakao_friend_detail_tv"
            android:text="YM"/>
        <TextView
            android:id="@+id/tv_msg"
            style="@style/kakao_friend_detail_tv"
            android:text="상태메세지"/>
    </LinearLayout>

</FrameLayout>