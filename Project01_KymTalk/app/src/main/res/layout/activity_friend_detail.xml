<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".friend.FriendDetailActivity">

    <FrameLayout
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imgv_background"
            android:alpha="0.6"
            android:scaleType="centerCrop"
            android:src="@drawable/friend_img2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_alignParentLeft="true"
            android:id="@+id/imgv_close"
            android:src="@drawable/ic_close_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"/>
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gift"
            android:background="@drawable/circle_back_trans"/>
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_moeny"
            android:background="@drawable/circle_back_trans"/>
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"
            android:background="@drawable/circle_back_trans"/>
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vertical"
            android:background="@drawable/circle_back_trans"/>
    </LinearLayout>



    <LinearLayout

        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ln_friend"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="30dp"
            android:layout_margin="10dp"
            >
            <ImageView
                android:id="@+id/imgv_profile"
                android:scaleType="centerCrop"
                android:src="@drawable/friend_img1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                style="@style/kakao_friend_detail_tv"
                android:text="YM"/>
            <ImageView
                android:layout_gravity="bottom"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_edit"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_msg"
            style="@style/kakao_friend_detail_tv"
            android:text="상태메세지"/>

        <View
            style="@style/kakao_gray_view_line_1dp"/>

        <LinearLayout
            android:id="@+id/btm_menu"
            android:layout_marginBottom="60dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout

                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    style="@style/kakao_friend_detail_tv"
                    android:text="1:1 채팅"/>
            </LinearLayout>
            <LinearLayout

                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    style="@style/kakao_friend_detail_tv"
                    android:text="보이스톡"/>
            </LinearLayout>
            <LinearLayout

                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_videocam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    style="@style/kakao_friend_detail_tv"
                    android:text="페이스톡"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>