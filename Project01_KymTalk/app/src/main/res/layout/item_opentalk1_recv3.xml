<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="5dp"

    app:cardCornerRadius="10dp"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="#121212"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgv_background"
            android:alpha="0.7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/friend_img1"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_marginTop="80dp"
            >

            <RelativeLayout
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_alignParentLeft="true"
                        android:id="@+id/tv_roomname1"
                        style="@style/kakao_friend_name_tv"
                        android:textSize="15dp"
                        android:text="채팅방 제목"/>
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/tv_roomname1"
                        android:id="@+id/tv_chattitle1"
                        style="@style/kakao_chat_title_tv"
                        android:textSize="12dp"
                        android:text="채팅방 제목"/>



                </RelativeLayout>


                <androidx.cardview.widget.CardView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="5dp"
                    >

                    <ImageView
                        android:id="@+id/imgv_profile1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/friend_img1" />
                </androidx.cardview.widget.CardView>


            </RelativeLayout>
            <View
                android:layout_height="0.5dp"
                android:layout_margin="0dp"
                android:layout_alignParentBottom="true"
                style="@style/kakao_gray_view_line_1dp"/>


            <RelativeLayout
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_alignParentLeft="true"
                        android:id="@+id/tv_roomname2"
                        style="@style/kakao_friend_name_tv"
                        android:textSize="15dp"
                        android:text="채팅방 제목"/>
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/tv_roomname2"
                        android:id="@+id/tv_chattitle2"
                        style="@style/kakao_chat_title_tv"
                        android:textSize="12dp"
                        android:text="채팅방 제목"/>



                </RelativeLayout>


                <androidx.cardview.widget.CardView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="5dp"
                    >
                    <ImageView
                        android:id="@+id/imgv_profile2"
                        android:scaleType="centerCrop"
                        android:src="@drawable/friend_img1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </androidx.cardview.widget.CardView>


            </RelativeLayout>
            <View
                android:layout_height="0.5dp"
                android:layout_margin="0dp"
                android:layout_alignParentBottom="true"
                style="@style/kakao_gray_view_line_1dp"/>

            <RelativeLayout
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_alignParentLeft="true"
                        android:id="@+id/tv_roomname3"
                        style="@style/kakao_friend_name_tv"
                        android:textSize="15dp"
                        android:text="채팅방 제목"/>
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/tv_roomname3"
                        android:id="@+id/tv_chattitle3"
                        style="@style/kakao_chat_title_tv"
                        android:textSize="12dp"
                        android:text="채팅방 제목"/>



                </RelativeLayout>


                <androidx.cardview.widget.CardView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="5dp"
                    >
                    <ImageView
                        android:id="@+id/imgv_profile3"
                        android:scaleType="centerCrop"
                        android:src="@drawable/friend_img1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </androidx.cardview.widget.CardView>


            </RelativeLayout>



        </LinearLayout>
    </FrameLayout>

</androidx.cardview.widget.CardView>