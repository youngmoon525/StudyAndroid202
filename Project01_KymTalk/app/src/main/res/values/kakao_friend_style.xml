<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="kakao_friend_name_tv">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>

    </style>
    <style name="kakao_friend_detail_tv" parent="kakao_friend_name_tv">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>

    </style>


    <style name="kakao_friend_category_tv_small">
        <item name="android:textColor">@color/friend_tv_category_gray</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="kakao_gray_view_line_1dp">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/view_line_gray</item>
    </style>

</resources>